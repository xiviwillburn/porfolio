---
import { Image } from 'astro:assets';
import what from '../../assets/johnCC.png';
import Card from '../Card.astro';
---

<div class="">
    <Card
        title="The One Who Loops, The Cyberbizarre Adventures of John CC"
        body="Gameplay Programmer"
        itchio="https://hard-bytes.itch.io/johncc-the-one-who-loops"
    >
    <div>
        <Image
            class="project-image border  border-black"
            src={what}
            alt=""
            densities={[1, 2, 3]} 
            />
