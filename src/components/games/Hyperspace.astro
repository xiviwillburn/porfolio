---
import { Image } from 'astro:assets';
import what from '../../assets/Hyperspace.png';
import Card from '../Card.astro';
---

<div class="">
    <Card
        title="HYPERSPACE"
        body="Level Programmer/Designer"
        body2="An assembly game for the Zilog Z80 (Amstrad CPC464). Download and source are currently unavailable due the closure of the cpcretrodev site :("
    >
        <div>
        <Image
            class="project-image border  border-black"
            src={what}
            alt=""
            densities={[1, 2, 3]} 
        />
        </div>
        <style>
            .project-image {
                width: 100%;
                height: auto;
            }
        </style>
    </Card>
</div>


