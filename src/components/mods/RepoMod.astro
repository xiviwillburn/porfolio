---
import { Image } from 'astro:assets';
import what from '../../assets/repo600x900.jpg';
import Card from '../Card.astro';
---

<div class="">
    <Card
    title="REPO RTC (Remote Trolling Commands)"
    body="A mod for the game R.E.P.O. that allows to invoke RPCs on demand using the ingame text chat"
    github="https://github.com/xiviwillburn/RepoRTCMod"
    >
        <div>
            <Image
                class="project-image border  border-black"
                src={what}
                alt=""
                densities={[1, 2, 3]} 
            />
        </div>
        <style>
            .project-image {
            width: 100%;
            height: auto;
            }
        </style>
    </Card>
</div>
 