---
import Layout from "../layouts/Layout.astro";

import Card from "../components/Card.astro";
import Heading from "../components/Heading.astro";
import Contact from "../components/Contact.astro";

import AleAndAdventures from "../components/games/AleAndAdventures.astro";
import Hyperadrenaline from "../components/games/Hyperadrenaline.astro";
import RollOrDie from "../components/games/RollOrDie.astro";
import Hyperspace from "../components/games/Hyperspace.astro";
import Sanguinaria from "../components/games/Sanguinaria.astro";
import DwarfToSize from "../components/games/DwarfToSize.astro";
---

<Layout title="Ivan's Portfolio">
  <div id="contents">
    <main class="container">
      <div class="mb-16">
        <Heading />
        <p
          class="mt-4 text-lg text-zinc-500 dark:text-zinc-400 font-light lg:text-xl"
        >
           Hello! I am Ivan and I develop Videogames.
           <!-- <a href="#contact" class="underline text-gray-300">Contact me!</a> -->
        </p>
      </div>
      <h2
        class="text-3xl mt-6 font-medium lg:text-4xl tracking-tight text-primary dark:text-white mb-2"
      >
        Projects I've worked on
      </h2>
      <div class="mx-auto grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="">
          <Card
            title="Sanguinaria"
            body="Gameplay/Technical Audio"
            steam="https://store.steampowered.com/app/2984200/Sanguinaria/"
          >
            <Sanguinaria />
          </Card>
        </div>
        <div class="">
          <Card
            title="Dwarf To Size"
            body="Gameplay/UI"
            href="https://hard-bytes.itch.io/dwarf-to-size"
          >
            <DwarfToSize />
          </Card>
        </div>
        <div class="">
          <Card
            title="Ale & Adventures"
            body="UI programmer"
            href="https://hard-bytes.itch.io/aleandaventures"
          >
            <AleAndAdventures />
          </Card>
        </div>
        <div class="">
          <Card
            title="Roll Or Die"
            body="Gameplay programmer"
            href="https://hard-bytes.itch.io/roll-or-die"
          >
            <RollOrDie />
          </Card>
        </div>
        <div class="">
          <Card
            title="Hyper Adrenaline"
            body="Gameplay/AI/Technical Programmer"
            href="https://hard-bytes.itch.io/hyper-adrenaline"
          >
            <Hyperadrenaline />
          </Card>
        </div>
        <div class="">
          <Card
            title="HYPERSPACE"
            body="Level Programmer/Designer"
            live="http://cpcretrodev.byterealms.com/wp-content/uploads/contest/2020/games/Hyperspace_Hardbytes.zip"
          >
            <Hyperspace />
          </Card>
        </div>
      </div>
      <div class="my-8">
        <Contact />
      </div>
      <div class="credit">
        Template made by <a href="https://github.com/leabs" style="color: blueviolet;">Steven Leabo</a> that can be found on <a href="https://github.com/leabs/shadowstack-portfolio" style="color: blueviolet;">GitHub</a>. Thank you!
      </div>
    </main>
  </div>
</Layout>

<style is:global>
  main {
    margin: auto;
    padding: 0.75rem;
    width: 1100px;
    max-width: 100%;
    color: white;
    line-height: 1.6;
  }
  .project-image {
    max-width: 100% !important;
    overflow: hidden;
  }
  .project-cards {
  }
  .video-wrapper {
    background: #111111;
    padding: calc(1.5rem - 1px);
    line-height: 1.4;
    border-radius: 8px;
    margin-bottom: 2rem;
  }
  .project-column > div {
    max-width: 100%;
    overflow: hidden;
  }
  .projects-alt > li {
    gap: 1rem !important;
  }
  .astro-a {
    position: absolute;
    top: -32px;
    left: 50%;
    transform: translatex(-50%);
    width: 220px;
    height: auto;
    z-index: -1;
  }

  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
    font-size: 2.75rem;
  }
  .instructions {
    margin-bottom: 2rem;
    border: 1px solid rgba(var(--accent-light), 25%);
    background: linear-gradient(
      rgba(var(--accent-dark), 66%),
      rgba(var(--accent-dark), 33%)
    );
    padding: 1.5rem;
    border-radius: 8px;
  }
  .instructions code {
    font-size: 0.8em;
    font-weight: bold;
    background: rgba(var(--accent-light), 12%);
    color: rgb(var(--accent-light));
    border-radius: 4px;
    padding: 0.3em 0.4em;
  }
  .instructions strong {
    color: rgb(var(--accent-light));
  }
  .link-card-grid {
    display: grid;
    gap: 0;
    padding: 0;
  }
  .read-more {
    color: #fff;
  }
  details {
    position: relative;
    top: -1px;
    margin-top: 0;
    margin-bottom: 1rem;
    padding: 1rem;
    border-radius: 0 0 8px 8px;
    max-width: 900px;
  }
  details > div {
    max-width: 830px;
  }

  summary:hover {
    cursor: pointer;
  }

  .credit{
    font-size:x-small; 
    color: gray;
  }
</style>

<script></script>
